<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageButton
            android:id="@+id/dessertBtn"
            android:layout_width="410dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:background="#F498AD"
            android:scaleType="fitCenter"
            tools:srcCompat="@drawable/dessert_menu_button" />

        <ImageButton
            android:id="@+id/drinkBtn"
            android:layout_below="@id/dessertBtn"
            android:layout_width="206dp"
            android:layout_height="300dp"
            android:background="#ceb6ff"
            android:scaleType="fitCenter"
            android:layout_alignParentStart="true"
            tools:srcCompat="@drawable/drink_menu_button" />

        <ImageButton
            android:id="@+id/soupBtn"
            android:layout_below="@id/dessertBtn"
            android:layout_width="206dp"
            android:layout_height="220dp"
            android:background="#E0AF"
            android:scaleType="fitCenter"
            android:layout_alignParentEnd="true"
            tools:srcCompat="@drawable/soup_menu_button" />

        <ImageButton
            android:id="@+id/pizzaBtn"
            android:layout_width="205dp"
            android:layout_height="300dp"
            android:layout_below="@id/soupBtn"
            android:layout_alignParentEnd="true"
            android:background="#ceb"
            android:scaleType="fitCenter"
            android:layout_alignParentBottom="true"

            tools:srcCompat="@drawable/pizza_menu_button" />

        <ImageButton
            android:id="@+id/pastaBtn"
            android:layout_width="206dp"
            android:layout_height="220dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/drinkBtn"
            android:layout_alignParentStart="true"
            android:background="#DB5A"
            android:scaleType="fitCenter"
            tools:srcCompat="@drawable/pasta_menu_button" />

    </RelativeLayout>


</RelativeLayout>
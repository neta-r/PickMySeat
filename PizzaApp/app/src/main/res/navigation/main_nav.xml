<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/mainFragment">
    <fragment
        android:id="@+id/pickSeatsFragment"
        android:name="com.gambelingapp.seats.PickSeatsFragment"
        android:label="PickSeatsFragment" >
        <action
            android:id="@+id/action_pickSeatsFragment_to_reservationSuccessFragment"
            app:destination="@id/reservationSuccessFragment" />
    </fragment>
    <fragment
        android:id="@+id/bookReservationFragment"
        android:name="com.gambelingapp.seats.BookReservationFragment"
        android:label="BookReservationFragment" >
        <argument
            android:name="NumberOfDinersSelected"
            app:argType="integer"
            android:defaultValue="-1" />
        <action
            android:id="@+id/action_bookReservationFragment_to_pickSeatsFragment"
            app:destination="@id/pickSeatsFragment" />
    </fragment>
    <fragment
        android:id="@+id/reservationSuccessFragment"
        android:name="com.gambelingapp.seats.ReservationSuccessFragment"
        android:label="ReservationSuccessFragment" />
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.gambelingapp.seats.MainFragment"
        android:label="MainFragment" >
        <action
            android:id="@+id/action_mainFragment_to_bookReservationFragment"
            app:destination="@id/bookReservationFragment" />
    </fragment>
</navigation>